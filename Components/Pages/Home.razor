@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Nav

<div class="home-hero">
    <div class="hero-inner">
        <h1>SolCentre</h1>
        <p class="lead">Explore NASA event data and daily space images.</p>

    </div>
</div>

<div class="home-content container">
    <section class="cards-grid">
        <article class="card">
            <h3>Events</h3>
            <p>Browse natural events tracked by NASA's EONET API — wildfires, storms, volcanic activity and more.</p>
            <p><a class="btn btn-sm" href="events">Open Events</a></p>
        </article>

        <article class="card">
            <h3>APOD</h3>
            <p>Daily astronomy picture from NASA (APOD). See the latest image and explanation.</p>
            <p><a class="btn btn-sm" href="apod">Open APOD</a></p>
        </article>

    </section>
</div>

@code {
    // No server work needed here — purely navigational and presentational.
}